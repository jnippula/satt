Import(['env', 'srcdirs', 'libdirs', 'installdir'])

localenv = env.Clone()

localenv.components = ['ipt-parser', 'common', 'sideband-parser']

localenv.component_srcdirs = [ srcdirs[x] for x in localenv.components ]
localenv.component_libdirs = [ libdirs[x] for x in localenv.components ]

localenv.component_srcdirs = localenv.component_srcdirs + ['#../../kernel-module']
localenv.Append(CPPPATH = localenv.component_srcdirs)

print("INSTALLDIR " + installdir)

localenv.StaticLibrary('sat-ipt-parser', ['sat-ipt-iterator.cpp',
                                          'sat-ipt-parser-sideband-info.cpp',
                                          'sat-ipt-tsc-heuristics.cpp'],
                                          LIBS = ['sat-common',
                                                  'sat-sideband-parser'],
                                          LIBPATH = localenv.component_libdirs)

localenv.Program(['sat-ipt-dump.cpp'],
                 LIBS=['sat-common'],
                 LIBPATH=localenv.component_libdirs)

localenv.Program(['sat-ipt-parser-test.cpp'],
                 LIBS=['sat-ipt-parser',
                       'sat-common',
                       'sat-sideband-parser'],
                 LIBPATH=localenv.component_libdirs)

localenv.Program(['sat-ipt-tsc-heuristics-dump.cpp'],
                 LIBS=['sat-ipt-parser',
                       'sat-common',
                       'sat-sideband-parser'],
                 LIBPATH=localenv.component_libdirs)

localenv.Install(installdir, [ 'sat-ipt-dump',
                               'sat-ipt-parser-test',
                               'sat-ipt-tsc-heuristics-dump'
                             ])
