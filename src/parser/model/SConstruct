flags = ARGUMENTS.get('flags', '-O3') + ' '

env = Environment(CCFLAGS   = flags + '-std=c++0x -Wall',
                  CPPPATH   = ['../common',
                               '../../sideband-parser/src',
                               '../../../kernel-module',
                               '../../rtit-parser/src',
                               '../../disassembler/src'],
                  LINKFLAGS = flags + '-static')

env.Program(['sat-rtit-model.cpp',
             'sat-sideband-model.cpp',
             'sat-scheduling-heuristics.cpp',
             'sat-rtit-instruction.cpp',
             'sat-system-map.cpp',
             'sat-call-stack.cpp',
             'sat-tid.cpp',
             'sat-demangle.cpp',
             'sat-path-mapper.cpp'
             'sat-filesystem.o'],
             LIBS = ['sat-common',
                     'sat-sideband-parser',
                     'sat-rtit-parser',
                     'sat-disassembler',
                     'capstone'],
             LIBPATH = ['../../common/src',
                        '../../sideband-parser/src',
                        '../../rtit-parser/src',
                        '../../disassembler/src'])
env.Program(['sat-dump-scheduling-heuristics.cpp',
             'sat-sideband-model.o',
             'sat-scheduling-heuristics.o',
             'sat-tid.o'],
             LIBS = ['sat-common',
                     'sat-sideband-parser',
                     'sat-rtit-parser',
                     'sat-disassembler'],
             LIBPATH = ['../../common/src',
                        '../../sideband-parser/src',
                        '../../rtit-parser/src'])
